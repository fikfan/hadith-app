---
import Layout from '../layouts/Layout.astro';

const response = await fetch('https://hadeethenc.com/api/v1/hadeeths/one/?language=en&id=3000');
const data = await response.json();

---

<Layout title="Hadis app test">
	<main>
		<div class="flex flex-col justify-center items-center h-dvh">
			<button class="rounded-full bg-black text-white p-2">Generate Hadith</button>
			<p>{data.id}</p>
			<p>{data.title}</p>
			<p>{data.hadeeth}</p>
			<p>{data.attribution}</p>
			<p>{data.grade}</p>
			<p>{data.explanation}</p>
		</div>
	</main>
</Layout>

<style>

main {
	padding: 1rem;
	margin: 0 auto;
	max-width: 800px;
	height: 100dvh;
}

</style>
